@model DeadManSwitch.UI.UserPreferenceEditModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="">
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.TimeZoneId, new { @class = "control-label" })
            <div class="">
                @Html.DropDownListFor(model => model.TimeZoneId, new SelectList(Model.TimeZoneOptions, "Key", "Value", Model.TimeZoneId))
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EarlyCheckInMinutes, new { @class = "control-label" })
            <div class="">
                @Html.DropDownListFor(model => model.EarlyCheckInMinutes, new SelectList(Model.EarlyCheckInOptions, "Key", "Value", Model.EarlyCheckInMinutes))
            </div>
        </div>

        <div class="form-group">
            <div class="">
                <input type="submit" value="Save changes" class="btn btn-primary" />
                @Html.ActionLink("Cancel", "Manage", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

